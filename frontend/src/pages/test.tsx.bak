import { Button } from '@material-ui/core'
import { FoldFn, useDataResult } from '../common/MyDataResult'
// import { makeDataResult } from 'common/MyDataResult'
import * as React from 'react'
import { useState } from 'react'

type State = {
  text: string
  number: number
}

type Payload = {
  text: string
}
export default function Test() {
  const { completed, failure, state } = useDataResult<State, Payload>(
    {
      text: 'This the payload',
    },
    true
  )

  const mapped = state.map((ds) => ({
    text: ds.text + ' mapped',
    number: ds.number * 10,
  }))

  console.log('State', state, mapped)

  const handleClick = (params) => {
    if (state.data) {
      failure(new Error('Test'))
    } else {
      completed({
        text: 'completed',
        number: 10,
      })
    }
  }

  return (
    <>
      {mapped.fold(({ payload, prevData }) => ({
        onSuccess: (data) => (
          <p>
            success: {data.text}, {data.number}
          </p>
        ),
        onLoading: () => <p>progress...</p>,
        onFailure: (failure) => <p>failure: {failure.message}</p>,
      }))}

      {mapped.onSuccess(({ data }) => (
        <p>
          success: {data.text}, {data.number}
        </p>
      ))}
      {mapped.onLoading(({}) => (
        <p>Loading...</p>
      ))}
      {mapped.onFailure(({ error }) => (
        <p>Error: {error.message}</p>
      ))}
      <Button onClick={handleClick}>Click me</Button>
    </>
  )
}
